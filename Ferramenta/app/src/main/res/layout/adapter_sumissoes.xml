<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <TextView
        android:layout_marginTop="5dp"
        android:text="#6 - Restaurante"
        android:id="@+id/adapter_submissoes_tvNomeExercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:text="Diagrama de Caso de Uso"
        android:id="@+id/adapter_submissoes_tvTipoDiagrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_submissoes_tvNomeExercicio"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_search"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:text="Tentativa em: 08/11/2018"
        android:id="@+id/adapter_submissoes_tvTentativa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_submissoes_tvTipoDiagrama"/>
    
</RelativeLayout>