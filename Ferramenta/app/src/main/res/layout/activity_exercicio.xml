<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/activity_exercicio_visu_tvTitle"
        android:textSize="22sp"
        android:textColor="#7c7c7c"
        android:text="#3 - Companhia Aérea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/activity_exercicio_visu_tvTipo"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:text="Diagrama de Caso de Uso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:background="#f4f4f4"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/activity_exercicio_visu_tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Paulo Souza Cardoso"/>

        <TextView
            android:id="@+id/activity_exercicio_visu_tvInst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instituição: FATEC Ourinhos"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                android:textSize="18dp"
                android:textColor="#5f5f5f"
                android:text="Descrição do Exercício:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />



            <TextView
                android:id="@+id/activity_exercicio_visu_tvDesc"
                android:textSize="18dp"
                android:textColor="#5f5f5f"
                android:text="Lorem ipsum dolor sit amet, Proin feugiat, nisl auctor congue convallis, justo enim consequat ligula, ac finibus lorem quam vitae risus. Donec placerat venenatis massa quis fermentum. Morbi et nisi elit. Donec cursus est a metus pretium, eu dignissim sapien malesuada. Nullam pharetra ullamcorper urna, vitae laoreet sem. Mauris a libero lobortis, feugiat neque ut, placerat urna. Cras purus leo, dignissim vel ipsum imperdiet, tristique venenatis nibh. Fusce cursus fringilla est, a iaculis urna sodales sit amet."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>
            
            <Button
                android:id="@+id/activity_exercicio_visu_btnResolver"
                android:text="Resolver Exercício"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
   



</LinearLayout>