<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.aula.victoriozansavio.umlp5.activity.SeusExerciciosActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/activity_seus_exercios_tvNome"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seus Exercícios"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/activity_seus_exercios_ivNovo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/activity_seus_exercios_tvQtdEx"
        android:text="1 exercício(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/activity_seus_exercios_edtBuscaEx"
        android:hint="Busque um exercício específico..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_seus_exercios_rvExercicios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>
