<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/adapter_exercicios_tvExercicio"
        android:text="#1 - Problema do Banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/adapter_exercicios_tvTipoDiagrama"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagrama de Caso de Uso"
        android:layout_below="@id/adapter_exercicios_tvExercicio"
        />

    <TextView
        android:text="Descrição: Lorem ipsum dolor sit amet, consecter hwodh ao d h w  oahd oawh "
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_exercicios_tvTipoDiagrama"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:src="@drawable/ic_up_arrow"
        android:tint="@android:color/white"
        android:rotation="90"/>

</RelativeLayout>