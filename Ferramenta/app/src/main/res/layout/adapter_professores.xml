<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:text="Paulo Souza Cardoso"
        android:id="@+id/adapter_professores_tvNomeProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#777777"
        android:text="FATEC Ourinhos"
        android:id="@+id/adapter_professores_tvInstituição"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_professores_tvNomeProfessor"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_search"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/adapter_submissoes_tvNomeExercicio"
        />

    <TextView
        android:text="10 Exercícios"
        android:id="@+id/adapter_professores_tvNumExs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_professores_tvInstituição"/>
    
</RelativeLayout>